{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "jsx": "react",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es6",
        "sourceMap": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "baseUrl": ".",
        "paths": {
            
        }
    },
    "exclude": [
        "node_modules",
        "__tests__",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}